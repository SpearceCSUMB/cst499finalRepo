<% include partials/header.ejs %>

<main>

<div id="header"></div>
<div id="searchResultsBlock">
    <div id="resultsContainer">
    <div id="searchResultsContainer">

<h3 id="searchResultsTitle">Your Cart</h3><br>

<table id="tableListCart" class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Year</th>
        <th scope="col">Manufacturer</th>
        <th scope="col">Model</th>
        <th scope="col">Price</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% rows.forEach(function(row) { %>
      <tr>
        <td><%= row['year'] %></td>
        <td><%= row['manufacturer'] %></td>
        <td><%= row['model'] %></td>
        <td>$ <%= row['price'] %></td>
        <td id = "delBtn_<%= row['id'] %>"></td>
        <script>
        if('<%= buttonView %>' == 0 ){
          $("#delBtn_<%= row['id'] %>").append("<button class='btn btn-remove-cart' type ='button' id= 'delete_<%= row['id'] %>' onclick='deleteCart(event, this);'>Remove from cart</button>")
          }
        </script>  
      <td></td>
      </tr>
      <% }) %>
      <tr>
        <td></td>
        <td></td>
        <td>Total</td>
        <td>$ <%= total %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td id="confirmButton"></td>
        <td></td>
      </tr>
      <script>
      if('<%= total %>' != "" && '<%= buttonView %>' == 0 ){
        $("#confirmButton").append("<button class='btn btn-confirm-cart' onclick= 'confirmOrder()' type ='button'</button>CONFIRM ORDER");
      } else {
        $("#confirmButton").empty();
      }         
      </script>
    </tbody>
  </table>
  </div>
  </div>
  </div>

<% include partials/footer.ejs %>